{
    "routes": [
        {
            "when": {
                "urlStartsWith": "/ping"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "text/plain",
                "body": "pong"
            }
        },
        {
            "when": {
                "urlStartsWith": "/object",
                "methodIs": "POST",
                "bodyContains": "key"
            },
            "answer": {
                "statusCode": 201,
                "contentType": "text/plain",
                "body": "created key"
            }
        },
        {
            "when": {
                "urlStartsWith": "/object",
                "methodIs": "POST"
            },
            "answer": {
                "statusCode": 201,
                "contentType": "text/plain",
                "body": "created"
            }
        },
        {
            "when": {
                "urlStartsWith": "/object",
                "methodIs": "PUT"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "text/plain",
                "body": "updated"
            }
        },
        {
            "when": {
                "urlStartsWith": "/greetings"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "text/plain",
                "body": "hello #who"
            }
        },
        {
            "when": {
                "urlMatches": "/echo/(.*?)/and/(.*?)"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "application/json",
                "body": { "one": "#group-1", "two": "#group-2" }
            }
        },
        {
            "answer": {
                "statusCode": 200,
                "contentType": "application/json",
                "body": { "old": true, "obsolete": "no" }
            }
        }
    ]
}