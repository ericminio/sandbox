{
    "routes": [
        {
            "when": {
                "urlStartsWith": "/ping"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "text/plain",
                "body": "pong"
            }
        },
        {
            "when": {
                "urlStartsWith": "/object",
                "methodIs": "POST",
                "bodyContains": "key"
            },
            "answer": {
                "statusCode": 201,
                "contentType": "text/plain",
                "body": "created key"
            }
        },
        {
            "when": {
                "urlStartsWith": "/object",
                "methodIs": "POST"
            },
            "answer": {
                "statusCode": 201,
                "contentType": "text/plain",
                "body": "created"
            }
        },
        {
            "when": {
                "urlStartsWith": "/object",
                "methodIs": "PUT"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "text/plain",
                "body": "updated"
            }
        },
        {
            "when": {
                "urlStartsWith": "/greetings"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "text/plain",
                "body": "hello #who"
            }
        },
        {
            "when": {
                "urlMatches": "/echo/(.*)/and/(.*)"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "application/json",
                "body": { "one": "#group-1", "two": "#group-2" }
            }
        },
        {
            "when": {
                "urlMatches": "/modify/(.*)"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "application/json",
                "body": { "message": "~call~combine()" }
            }
        },
        {
            "when": {
                "urlMatches": "/function-collection"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "application/json",
                "body": { "values": "~call~create-object()" }
            }
        },
        {
            "when": {
                "urlStartsWith": "/no-function"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "application/json",
                "body": { "all": "good" }
            }
        },
        {
            "when": {
                "urlStartsWith": "/exception-in-function"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "application/json",
                "body": { "all": "~call~any()" }
            }
        },
        {
            "when": {
                "urlStartsWith": "/function-plain-text"
            },
            "answer": {
                "statusCode": 200,
                "contentType": "text/plain",
                "body": "~call~plain-text()"
            }
        },

        {
            "answer": {
                "statusCode": 200,
                "contentType": "application/json",
                "body": { "old": true, "obsolete": "no" }
            }
        }
    ]
}